@model GameApplication.Models.CreatureDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to delete this creature?</h2>
<a href="/Creature/List" class="link_nav" style="color: red!important;">Cancel</a>
<h2>@Model.CreatureName</h2>
<div><h3>Power: @Model.CreaturePower</h3></div>
<div><h3>Race: @Model.RaceName</h3></div>
<form action="/Creature/Delete/@Model.CreatureID" method="POST">
    <input type="submit" value="Confirm Delete" class="button" style="margin-top:2rem;"/>

</form>