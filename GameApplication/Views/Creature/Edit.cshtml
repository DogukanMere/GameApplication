@model GameApplication.Models.ViewModels.UpdateCreature

@{
    ViewBag.Title = "Edit";
}

<h2>Update Creature</h2>
<form action="/Creature/Update/@Model.SelectedCreature.CreatureID" method="POST" enctype="multipart/form-data" class="add_form">
    <div style="display:none;">
        <input type="text" name="CreatureID" value="@Model.SelectedCreature.CreatureID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="CreatureName" value="@Model.SelectedCreature.CreatureName" />
    </div>
    <div>
        <label>Power:</label> <input type="number" name="CreaturePower" value="@Model.SelectedCreature.CreaturePower" />
    </div>
    <div>
        <label>Race ID:</label>

        <select name="RaceID">
            @foreach (var race in Model.RaceOptions)
            {
                string selected = "";
                if (race.RaceID == Model.SelectedCreature.RaceID)
                {
                    selected = "selected";
                }
                <option value="@race.RaceID" @selected>@race.RaceName</option>

            }
        </select>
    </div>
    <div class="col-md-6 col-sm-12">
        <input type="file" name="CreaturePic" />
    </div>
    <div>
        <input type="submit" value="Update Creature" class="button"/>

    </div>
</form>