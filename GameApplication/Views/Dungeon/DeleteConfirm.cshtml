@model GameApplication.Models.DungeonDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to delete this Dungeon?</h2>
<a href="/Dungeon/List" class="link_nav" style="color: red!important;">Cancel</a>
<h3>Name: @Model.DungeonName</h3>
<h3>Location: @Model.DungeonLocation</h3>
<form action="/Dungeon/Delete/@Model.DungeonID" method="POST">
    <input type="submit" value="Confirm Delete" class="button" style="margin-top:2rem;"/>
</form>