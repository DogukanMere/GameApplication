@model GameApplication.Models.ViewModels.DetailsRace


@{
    ViewBag.Title = "View";
}

<a href="/Race/List">Go back to list</a>
<br />
<a href="/Race/Edit/@Model.SelectedRace.RaceID">Update</a>
<br />
<a style="color:#ab2020;" href="/Race/DeleteConfirm/@Model.SelectedRace.RaceID">Delete</a>
<h2>@Model.SelectedRace.RaceName</h2>
<div>Endangered: @Model.SelectedRace.RaceOffensive</div>

<div style="margin-top:75px;">
    <h4>Creatures related to this race</h4>
    @foreach(var creature in Model.RelatedCreatures)
     {
        <a href="/Creature/Details/@creature.CreatureID">@creature.CreatureName</a>
     }
</div>