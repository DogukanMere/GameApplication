@model GameApplication.Models.RaceDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to delete this race?</h2>
<a href="/Race/List" class="link_nav" style="color: red!important;">Cancel</a>
<h3>Name: @Model.RaceName</h3>
<p>Offensive: @Model.RaceOffensive</p>
<form action="/Race/Delete/@Model.RaceID" method="POST">
    <input type="submit" value="Confirm Delete" class="button" style="margin-top:2rem;"/>
</form>